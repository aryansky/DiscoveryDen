<%- layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit Details:</h1>

  <div class="col-6 offset-3">
    <form
      method="POST"
      action="/attractions/<%= attraction._id %>?_method=PUT"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="newAttractionName" class="form-label">Name</label>
        <input
          type="text"
          id="newAttractionName"
          name="newAttraction[name]"
          placeholder="Enter attraction Name"
          class="form-control"
          value="<%= attraction.name %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="newAttractionDescription" class="form-label"
          >Description</label
        >
        <br />
        <textarea
          name="newAttraction[description]"
          id="newAttractionDescription"
          placeholder="Enter details about the attraction here"
          class="form-control"
          rows="4"
          required
        >
<%= attraction.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="newAttractionLocation" class="form-label">City</label>
        <input
          type="text"
          id="newAttractionLocation"
          name="newAttraction[location]"
          placeholder="eg. Mumbai"
          class="form-control"
          value="<%= attraction.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="newAttractionImage" class="form-label">Image Url</label>
        <input
          type="text"
          id="newAttractionImage"
          name="newAttraction[image]"
          placeholder="eg. https://cdn.pixabay.com/photo/2024/05/26/10/15/bird-8788491_1280.jpg"
          class="form-control"
          value="<%= attraction.image %>"
          required
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update</button>
      </div>
    </form>
    <a href="/attractions/<%= attraction._id %>">Cancel</a>
  </div>
</div>
